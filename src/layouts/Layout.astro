---
import "@/styles/bear.css";
import { SITE } from "@/config";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = SITE.title,
  description = SITE.desc,
} = Astro.props;

const pageTitle = title === SITE.title ? title : `${title} | ${SITE.title}`;
---

<!doctype html>
<html lang={SITE.lang || "en"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content={SITE.author} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" title={SITE.title} href="/rss.xml" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <nav>
      <a href="/"><strong>{SITE.title}</strong></a>
      <a href="/blog">Blog</a>
      <a href="/tags">Tags</a>
      <a href="/rss.xml">RSS</a>
    </nav>

    <slot />

    <footer>
      <p>
        &copy; {new Date().getFullYear()} {SITE.author} &middot;
        <a href="https://github.com/chchannn">GitHub</a> &middot;
        <a href="https://x.com/chchannn">X</a> &middot;
        <a href="https://www.linkedin.com/in/chchennn/">LinkedIn</a>
      </p>
    </footer>
  </body>
</html>
